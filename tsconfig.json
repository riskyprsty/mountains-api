{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "./src",
    "target": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "lib": [
      "ESNext"
    ],
    "baseUrl": "./",
    "paths": {
      "@controllers/*": [
        "./src/server/controllers/*"
      ],
      "@routes/*": [
        "./src/server/routes/*"
      ],
      "@data/*": [
        "./data/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}